                                <include>siga-ext.jar</include>
                                <include>pd4ml_demo.jar</include>
                                <include>pd4ml_tl_demo.jar</include>
                                <include>XmlSchema-1.4.5.jar</include>
                                <include>iText-2.1.5.jar</include>
                                <include>iText-rtf-2.1.5.jar</include>
                            </includes>                            
                            <targetPath>WEB-INF/lib</targetPath>
                        </resource>
                    </webResources>  
                </configuration>
            </plugin>
        </plugins>
