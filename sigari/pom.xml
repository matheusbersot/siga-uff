                  </dependency>

                  <dependency>
                      <groupId>ar.com.fdvs</groupId>
                      <artifactId>DynamicJasper</artifactId>
                      <version>3.0.6</version>
                      <exclusions>
                        <exclusion>
                          <groupId>bouncycastle</groupId>
                          <artifactId>bcmail-jdk14</artifactId>
                        </exclusion>
                        <exclusion>
                          <groupId>bouncycastle</groupId>
                          <artifactId>bcprov-jdk14</artifactId>
